pipeline {
    agent {
        label 'AGENT-1'
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }
    }

    post {
        always{
            echo "this section will always run"
        }

        success {
            echo "this section run when pipeline is success"
        }

        failure {
            echo "this section run runs when pipeline is failed"
        }
    }
}