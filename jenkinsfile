pipeline {
    agent {
        label 'AGENT-1'
    }

    options {
        timeout(time: 10, unit: 'MINUTES')
        disableConcurrentBuilds()
        retry(2)
    }

    parameters {
        string(name: 'MAIN', defaultValue: 'main', description: 'Branch to build')

        text(name: 'DESCRIPTION', defaultValue: 'This is a sample Jenkins pipeline', description: 'Description of the build')

    }

    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'sleep 10'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh 'env'
            }
        }
        stage('Deploy') {
            when {
                //branch "main"
                expression { return params.MAIN == 'main'}
            }
            steps {
                echo 'Deploying...'
            }
        }

        stage('print params')
        {
            steps{
                echo "Branch to build: ${params.MAIN}"
                echo "Description: ${params.DESCRIPTION}"
            }
        }
        stage('approval')
        {
            steps{
                input message: 'Do you want to proceed to deploy?', ok: 'Yes, proceed'
            }
        }
    }
    

    post {
        always{
            echo "this section will always run"
            deleteDir()
        }

        success {
            echo "this section run when pipeline is success"
        }

        failure {
            echo "this section run runs when pipeline is failed"
        }
    }
    
}